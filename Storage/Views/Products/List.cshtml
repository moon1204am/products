@model ProductSearchParamsViewModel
@inject ICategorySelectListService service

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Search" asp-controller="Products" method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" asp-for="FilterDTO.Name" placeholder="Search on title..." />
        <div class="input-group-append">
            <select class="form-control" asp-for="FilterDTO.Category" asp-items="@await service.GetCategoriesAsync()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">&emsp;Search</i></button>
        </div>
    </div>
</form>
<partial name="_ProductListPartial" model="@Model.ProductViewModel" />
